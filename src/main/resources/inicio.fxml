<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="center" prefHeight="400.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #B2FBA5; -fx-border-color: #123A3;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.banco.controlador.InicioControlador">

    <Label alignment="TOP_LEFT" contentDisplay="CENTER" style="-fx-text-fill: Calibri;" text="BANCO UQ">
      <font>
         <Font name="High Tower Text" size="18.0" />
      </font>
    </Label>

    <ImageView fitHeight="155.0" fitWidth="164.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@img/logo.png" />
        </image>
    </ImageView>

    <Label text="¿Qué desea hacer?">
        <font>
             <Font size="14.0" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="btniniciarsesion" minHeight="40.0" minWidth="130.0" onAction="#irIniciarSesion" style="-fx-background-color: #013A20; -fx-text-fill: white;" text="Iniciar sesión" />
        <Button fx:id="btnregistrarse" minHeight="40.0" minWidth="130.0" onAction="#irRegistroCliente" style="-fx-background-color: #013A20; -fx-text-fill: white;" text="Registrarse" />
    </HBox>

</VBox>
